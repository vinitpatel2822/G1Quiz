<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.mac.group7.g1quiz.MainQuiz">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingTop="30dp"
        android:src="@drawable/qlogo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:gravity="center"
        android:textSize="35dp"
        android:fontFamily="sans-serif-light"
        android:background="#ffffff"
        android:textStyle="bold|italic"
        android:text="Let's Get Start...!!!"
        android:textColor="@color/theme_fg_light"/>

    <Button
        android:id="@+id/btnStartQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/theme_fg_light"
        android:layout_marginTop="@dimen/padding15dp"
        android:padding="12dp"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold|italic"
        android:onClick="clickStart"
        android:text="Start QUIZ"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/theme_fg_light"
        android:layout_marginTop="@dimen/padding15dp"
        android:padding="12dp"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold|italic"
        android:onClick="clickHelp"
        android:text="Help"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/theme_fg_light"
        android:layout_marginTop="@dimen/padding15dp"
        android:padding="12dp"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold|italic"
        android:onClick="clickExit"
        android:text="Exit"
        android:textColor="#ffffff" />

</LinearLayout>